@model Eshop.Core.Entities.Product

<div class="col-md-4 py-2">
    <div class="card">
        <img class="card-img-top" src="/images/@(Model.Id).jpg">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="text-center">
                <a asp-action="Details" asp-controller="Home"
                   asp-route-itemId="@Model.ItemId" class="btn btn-primary">جزئیات محصول</a>
            </p>
        </div>
    </div>
</div> 