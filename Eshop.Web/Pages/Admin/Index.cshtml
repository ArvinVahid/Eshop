@page
@model Eshop.Web.Pages.Admin.IndexModel
@{
}
<h1>لیست کالاها</h1>
<hr />

<p>
    <a class="btn btn-success text-white" asp-page="Add">افزودن کالا</a>
</p>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>تصویر</th>
            <th>نام</th>
            <th>قیمت</th>
            <th>دستورات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    <img src="/images/@(item.Id).jpg" style="max-width: 200px; border: 1px solid gray;padding: 3px" />
                </td>
                <td>
                    @item.Name
                </td>
                <td>@item.Item.Price</td>
                <td>
                    <p class="text-center py-5">
                        <a class="btn btn-danger text-white" asp-page="Delete" asp-route-id="@item.Id">حذف</a>
                        <a class="btn btn-warning" asp-page="Edit" asp-route-id="@item.Id">ویرایش</a>
                    </p>
                </td>
            </tr>
        }
    </tbody>
</table>